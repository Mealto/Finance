<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
<%= render 'shared/header' %>
  <div class="form-container">
    <%= form_tag(contact_us_path, method: "post") do %>
      <div class="form-group">
        <%= label_tag(:name, "Name:") %>
        <%= text_field_tag(:name, nil, class: "form-control", required: true) %>
      </div>
      <div class="form-group">
        <%= label_tag(:email, "Email:") %>
        <%= email_field_tag(:email, nil, class: "form-control", required: true) %>
      </div>
      <div class="form-group">
        <%= label_tag(:phone_number, "phone_number:") %>
        <%= telephone_field_tag(:phone_number, nil, class: "form-control", required: true) %>
      </div>
      <div class="form-group">
        <%= label_tag(:remark, "remark:") %>
        <%= text_area_tag(:remark, nil, class: "form-control", rows: 4, required: true) %>
      </div>
      <div class="form-group">
        <%= label_tag(:business_type, "business_type:") %>
        <%#= text_area_tag(:business_type, nil, class: "form-control", rows: 4, required: true) %>
        <%= select_tag :status, options_for_select(Contact.business_types) %>
      </div>
      <%= submit_tag("Submit", class: "btn btn-primary") %>
    <% end %>
  </div>
</body>
</html>